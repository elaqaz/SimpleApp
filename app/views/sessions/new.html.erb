<div class="container">  
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header text-center">
          <h2>Welcome Back to SimpleApp</h2>
        </div>
        <div class="card-body">
          <%= form_with(url: login_path, local: true, scope: :session) do |form| %>
            <% if flash[:alert] %>
              <div class="alert alert-danger" role="alert">
                <%= flash[:alert] %>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email', required: true %>
            </div>

            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password', required: true %>
            </div>

            <div class="form-group text-center">
              <%= form.submit 'Login', class: 'btn btn-primary btn-lg mt-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
