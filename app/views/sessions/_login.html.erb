<div class="hero" style="background: url('https://source.unsplash.com/1600x900/?login') no-repeat center center; background-size: cover;">
  <div class="hero-content">
    <h1 class="display-4">Welcome Back to SimpleApp</h1>
    <p class="lead">Please login to continue managing your tasks efficiently with SimpleApp.</p>
    <hr class="my-4">
    
    <h2 class="mt-4">Login</h2>

    <%= form_with(url: login_path, local: true) do |form| %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="form-group mb-3">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control', placeholder: 'Enter your email' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: 'form-control', placeholder: 'Enter your password' %>
      </div>

      <div class="actions form-group text-center">
        <%= form.submit 'Login', class: 'btn btn-primary btn-lg mt-4' %>
      </div>
    <% end %>
  </div>
</div>
