<!-- app/views/users/settings.html.erb -->
<h1>Settings Page</h1>
<p>Manage your settings here.</p>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Change Password</h5>
    <%= form_with(model: current_user, url: settings_path, local: true) do |form| %>
      <div class="form-group mb-3">
        <%= form.label :current_password %>
        <%= form.password_field :current_password, class: 'form-control', placeholder: 'Enter current password' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :new_password %>
        <%= form.password_field :new_password, class: 'form-control', placeholder: 'Enter new password' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :new_password_confirmation %>
        <%= form.password_field :new_password_confirmation, class: 'form-control', placeholder: 'Confirm new password' %>
      </div>

      <div class="actions form-group text-center">
        <%= form.submit 'Change Password', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
