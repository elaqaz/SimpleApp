<div id="users" class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to 'Show', user_path(user), class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
                <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
