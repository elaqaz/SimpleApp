<!-- app/views/users/profile.html.erb -->
<h1>Profile Page</h1>
<p>Welcome to your profile page, <%= current_user.name %>.</p>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Your Details</h5>
    <p class="card-text"><strong>Name:</strong> <%= current_user.name %></p>
    <p class="card-text"><strong>Email:</strong> <%= current_user.email %></p>
    <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'btn btn-primary' %>
  </div>
</div>
