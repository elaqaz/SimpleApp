<div class="hero" style="background: url('<%=  %>') no-repeat center center; background-size: cover;">
  <div class="hero-content">
    <h1 class="display-4">Profile</h1>
    <p class="lead">Manage your personal details efficiently with SimpleApp.</p>
    <hr class="my-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Your Details</h5>
        <p class="card-text"><strong>Name:</strong> <%= current_user.name %></p>
        <p class="card-text"><strong>Email:</strong> <%= current_user.email %></p>
        <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'btn btn-primary mt-3' %>
      </div>
    </div>
  </div>
</div>
